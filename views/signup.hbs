{{> welcomemenu id="signup"}}

<form class="ui stacked segment form" action="/register" method="POST">
  <h3 class="ui dividing header">Register</h3>
   <h4 class="ui header">Personal Details</h4>
  <div class="two fields">
    <div class="field">
      <label>First Name</label>
      <input placeholder="First Name" type="text"  name="firstName">
    </div>
    <div class="field">
      <label>Last Name</label>
      <input placeholder="Last Name" type="text"  name="lastName">
    </div>
  </div>
  
  <div class="two fields">
    <div class="field">
      <label>Email</label>
      <input placeholder="Email" type="text" name="email">
    </div>
    <div class="field">
      <label>Password</label>
      <input type="password" name="password">
    </div>
  </div>
  
  <div class="three fields">
     <div class="field">
      <label>Gender</label>
       <div class="ui selection dropdown">
     <input type="hidden" name="gender">
        <div class="default text">Gender</div>
        <i class="dropdown icon"></i>
        <div class="menu">
          <div class="item" data-value="male">Male</div>
          <div class="item" data-value="female">Female</div>
        </div>
       </div>    
       </div>
  <div class="field">
    <label>Height (centimetres)</label>
    <input placeholder ="175" type="number" name="height">
      </div>
  <div class="field">
    <label>Weight (kgs)</label>
    <input placeholder ="69" type="number" name="startingweight">
  
  </div>
  </div>
  
  
  <h4 class="ui header">Assessment Details</h4>
  <button class="ui blue submit button">Submit</button>
</form>