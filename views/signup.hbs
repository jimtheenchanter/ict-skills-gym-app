{{> welcomemenu id="signup"}}

<form class="ui stacked segment form" action="/register" method="POST">
  <h3 class="ui dividing header">Register New Menu</h3>
   <h4 class="ui header">Personal Details</h4>
  <div class="two fields">
    <div class="field">
      <label>First Name</label>
      <input placeholder="First Name" type="text"  name="firstName">
    </div>
    <div class="field">
      <label>Last Name</label>
      <input placeholder="Last Name" type="text"  name="lastName">
    </div>
  </div>
  
  <div class="two fields">
    <div class="field">
      <label>Email</label>
      <input placeholder="Email" type="text" name="email">
    </div>
    <div class="field">
      <label>Password</label>
      <input type="password" name="password">
    </div>
  </div>

    <div class="field">

        <label> Address</label>
        <input placeholder="Address" type="text" name="address">
    </div>

  
  <div class="three fields">

     <div class="field">
       <label>Gender</label>

             <select class="ui fluid dropdown" name="gender">
                 <option value="">Select Gender</option>
                 <option value="F">Female</option>
                 <option value="M">Male</option>

             </select>

     </div>

     <div class="field">
       <label>Height (metres)</label>
       <input placeholder ="1.75" type="float" name="height">
         </div>

      <div class="field">
        <label>Weight (kgs)</label>
        <input placeholder ="69" type="number" name="startingweight">
    </div>

  </div>


    <button class="ui blue submit button" >Submit</button>
</form>