{{> menu id="settings"}}


 <h4 class="ui header">Update your details</h4>
<form class="ui stacked segment form" action="/register" method="POST">
  <h3 class="ui dividing header"></h3>
   <h4 class="ui header">Personal Details</h4>
  <div class="two fields">
    <div class="field">
      <label>First Name</label>
      <input placeholder="First Name" type="text"  name="firstName">
    </div>
    <div class="field">
      <label>Last Name</label>
      <input placeholder="Last Name" type="text"  name="lastName">
    </div>
  </div>
  
  <div class="two fields">
    <div class="field">
      <label>Email</label>
      <input placeholder="Email" type="text" name="email">
    </div>
    <div class="field">
      <label>Password</label>
      <input type="password" name="password">
    </div>
  </div>
  
  <div class="three fields">
     <div class="field">
       <label>State</label>
      <select class="ui fluid dropdown">
        <option value="">Gender</option>
    <option value="F">Female</option>
    <option value="M">Male</option>
       </select>    
       </div>
  <div class="field">
    <label>Height (centimetres)</label>
    <input placeholder ="175" type="number" name="height">
      </div>
  <div class="field">
    <label>Weight (kgs)</label>
    <input placeholder ="69" type="number" name="startingweight">
  
  </div>
  </div>
  
  
 
  <button class="ui blue submit button">Submit</button>
</form>