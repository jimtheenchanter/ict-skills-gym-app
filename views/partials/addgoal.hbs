<form class="ui stacked segment form" action="/assessment/{{assessment.id}}/addgoal" method="POST">
  <div class="two fields">
    <div class="field">
      <label>Current BMI</label>
      <input placeholder="Current BMI" type="number" name="current">
    </div>
    <div class="field">
      <label>Desired BMI</label>
      <input placeholder="Desired" type="number" name="desire">
    </div>
    <div class="field">
      <label>Target Date</label>
      <input placeholder="dd/mm/yy" type="number" name="Target date">
    </div>
  </div>
  <button class="ui blue submit button">Add Goal</button>
</form>