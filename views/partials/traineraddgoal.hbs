<form class="ui stacked segment form" action="/trainerdash/addgoal/{{id}}" method="POST">

    <div class="two fields">


        <div class="field">
            <label>Desired BMI</label>
            <input placeholder="Desired" type="number" name="desired">
        </div>
        <div class="field">
            <label>Target Date</label>
            <input placeholder="dd/mm/yy" type="date" name="targetdate">
        </div>
    </div>
    <input name="member" id="member" value="{{member.id}}" hidden>  <!-- points to where the data is stored-->
    <button class="ui blue submit button">Add Goal</button>
</form>